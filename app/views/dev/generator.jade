extends ../layout

block content
  .page-header
    h1 #{title}

  .row(ng-controller='MockGeneratorCtrl')
    .col-sm-2
      pre
        {{gen | json}}

    .col-sm-10
      form.form-horizontal(role='form', name='genForm', novalidate)

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='eventCount') Events to generate
          .col-sm-1: input.form-control(type='number', name='eventCount', id='eventCount', ng-model='gen.eventCount')

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='activities') Activities
          .col-sm-1: input.form-control(type='text', name='activities', id='activities', ng-model='gen.activities')

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='titleSizes') Title size
          .col-sm-6.btn-group(bs-checkbox-group, ng-model="gen.titleSizes")
            label.btn.btn-default
              input(type="checkbox", value="small")
              | Small
            label.btn.btn-default
              input(type="checkbox", value="medium")
              | Medium
            label.btn.btn-default
              input(type="checkbox", value="large")
              | Large

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='descSizes') Description size
          .col-sm-6.btn-group(bs-checkbox-group, ng-model="gen.descSizes")
            label.btn.btn-default
              input(type="checkbox", value="small")
              | Small
            label.btn.btn-default
              input(type="checkbox", value="medium")
              | Medium
            label.btn.btn-default
              input(type="checkbox", value="large")
              | Large

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='hasHtmlDesc') Description has HTML
          .col-sm-6.btn-group(bs-radio-group, ng-model="gen.hasHtmlDesc")
            label.btn.btn-default
              input(type="radio", value="true")
              | Yes
            label.btn.btn-default
              input(type="radio", value="false")
              | No

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='hasLogo') Has logo
          .col-sm-6.btn-group(bs-radio-group, ng-model="gen.hasLogo")
            label.btn.btn-default
              input(type="radio", value="true")
              | Yes
            label.btn.btn-default
              input(type="radio", value="false")
              | No

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='logoSizes') Logo size
          .col-sm-6.btn-group(bs-checkbox-group, ng-model="gen.logoSizes")
            label.btn.btn-default
              input(type="checkbox", value="small")
              | Small
            label.btn.btn-default
              input(type="checkbox", value="medium")
              | Medium
            label.btn.btn-default
              input(type="checkbox", value="large")
              | Large

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='dateTypes') Date
          .col-sm-6.btn-group(bs-checkbox-group, ng-model="gen.dateTypes")
            label.btn.btn-default
              input(type="checkbox", value="past")
              | Past
            label.btn.btn-default
              input(type="checkbox", value="current")
              | Current
            label.btn.btn-default
              input(type="checkbox", value="future")
              | Future

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='durationAmount') Duration
          .col-sm-1: input.form-control(type='number', name='durationAmount', id='durationAmount', ng-model='gen.durationAmount')
          .col-sm-6.btn-group(bs-radio-group, ng-model="gen.durationUnit")
            label.btn.btn-default
              input(type="radio", value="h")
              | Hours
            label.btn.btn-default
              input(type="radio", value="d")
              | Days

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='isCanceled') Event is canceled
          .col-sm-6.btn-group(bs-radio-group, ng-model="gen.isCanceled")
            label.btn.btn-default
              input(type="radio", value="true")
              | Yes
            label.btn.btn-default
              input(type="radio", value="false")
              | No

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='isAuthor') I am an author
          .col-sm-6.btn-group(bs-radio-group, ng-model="gen.isAuthor")
            label.btn.btn-default
              input(type="radio", value="true")
              | Yes
            label.btn.btn-default
              input(type="radio", value="false")
              | No

        .form-group(ng-class="{'has-error': false}")
          label.col-sm-2.control-label(for='participantCount') Participants
          .col-sm-1: input.form-control(type='number', name='participantCount', id='participantCount', ng-model='gen.participantCount')

        .form-group
          .col-sm-offset-2.col-sm-2
            button.btn.btn-primary(type='button', ng-disabled='genForm.$invalid', ng-click='generateEvents()')
              | Generate {{gen.eventCount}} events!
