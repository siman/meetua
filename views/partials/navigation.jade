.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') MeetUA
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        //li(class=title=='API Browser'?'active':undefined)
        //  a(href='/api') API Browser
        //li(class=title=='Contact'?'active':undefined)
        //  a(href='/contact') Contact
        li(class=title=='Найти событие'?'active':undefined)
          a(href='/event/find#TODO') Найти событие
        li(class=title=='Создать событие'?'active':undefined)
          a(href='/event/create') Создать событие
        if user
          li(class=title=='Мои события'?'active':undefined)
            a(href='/my-events') Мои события
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=title=='Login'?'active':undefined)
            a(href='/login') Войти
          if secrets.localAuth
            li(class=title=='Create Account'?'active':undefined)
              a(href='/signup') Создать аккаунт
        else
          li.dropdown(class=title=='Account Management'?'active':undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img.profile-image(src='#{user.profile.picture}')
              else
                img.profile-image(src='#{user.gravatar(60)}')
              | #{user.profile.name || user.email || user.id}&nbsp;
              i.caret
            ul.dropdown-menu
              li: a(href='/account') Мой аккаунт
              li.divider
              li: a(href='/logout') Выйти