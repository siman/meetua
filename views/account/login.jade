extends ../layout

block content
  form(method='POST', action='/login')
    legend Войти
    input(type='hidden', name='_csrf', value=_csrf)
    .col-sm-8.col-sm-offset-2
      if secrets.localAuth
        .form-group
          label.control-label(for='email') Email
          input.form-control(type='text', name='email', id='email', placeholder='Email', autofocus=true)
        .form-group
          label.control-label(for='password') Пароль
          input.form-control(type='password', name='password', id='password', placeholder='Пароль')
        .form-group
          button.btn.btn-primary(type='submit')
            i.fa.fa-unlock-alt
            | Войти
          a.btn.btn-link(href='/forgot') Забыли пароль ?
        hr
      .panel.panel-dafault
        .panel-heading
          h3
            span.social-login Войти как пользователь
        .panel-footer
          if secrets.vkAuth
            a.btn.btn-social-icon.btn-lg.btn-vk(href='/auth/vkontakte')
              i.fa.fa-vk
          if secrets.facebookAuth
            a.btn.btn-social-icon.btn-lg.btn-facebook(href='/auth/facebook')
              i.fa.fa-facebook
          if secrets.twitterAuth
            a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
              i.fa.fa-twitter
              | Войти через Twitter
          if secrets.googleAuth
            a.btn.btn-block.btn-google-plus.btn-social(href='/auth/google')
              i.fa.fa-google-plus
              | Войти через Google
          if secrets.githubAuth
            a.btn.btn-block.btn-github.btn-social(href='/auth/github')
              i.fa.fa-github
              | Войти через GitHub
          if secrets.linkedinAuth
            a.btn.btn-block.btn-linkedin.btn-social(href='/auth/linkedin')
              i.fa.fa-linkedin
              | Войти через LinkedIn
