extends ../layout

block content
  .page-header
    h1 Мои cобытия
  div(ng-controller='MyEventsCtrl')
    h2 Созданные мной
    div.row.preview_event(
      ng-repeat="event in events.my",
      ng-click="viewEvent(event)"
    )
      .col-sm-10
        include ../partials/preview-event
      .col-sm-2
        .btn-group
          a.btn.btn-default(ng-href="/event/{{event._id}}/edit", role="button") Редактировать
          //a.btn.btn-default(href="#", role="button") Удалить // TODO

    h2 Собираюсь пойти
    div.row.preview_event(
      ng-repeat="event in events.going",
      ng-click="viewEvent(event)"
    )
      .col-sm-10
        include ../partials/preview-event
      .col-sm-2
        .btn-group
          a.btn.btn-default(role="button") TODO: Отказаться

    h2 Посещенные
    div.row.preview_event(
      ng-repeat="event in events.visited",
      ng-click="viewEvent(event)"
    )
      .col-sm-10
        include ../partials/preview-event
